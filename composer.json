{
    "name": "wandu/laravel-repository",
    "description": "For Laravel Repository Pattern",
    "keywords": ["wandu", "laravel", "repository", "data mapper"],
    "license": "MIT",
    "require": {
        "illuminate/database": "^5.1",
        "illuminate/cache": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Wandu\\Laravel\\Repository\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wandu\\Laravel\\Repository\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "mockery/mockery": "^0.9",
        "illuminate/filesystem": "^5.1",
        "league/flysystem": "^1.0",
        "fzaninotto/faker": "^1.5"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "archive" : {
        "exclude": ["/tests"]
    }
}
